{
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  }
}